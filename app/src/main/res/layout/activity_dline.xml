<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LineActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DD172996"
            app:srcCompat="@drawable/r"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#95000000"
            android:padding="39dp"
            android:text="@string/you_have_something_on_your_as_my_eyes"
            android:textColor="#FFFFFF"
            android:textSize="45dp" />

        <Button
            android:id="@+id/db"
            android:layout_width="205dp"
            android:layout_height="62dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="625dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:background="#E91E63"
            android:text="REJECTED, TRY AGAIN"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

    </RelativeLayout>
</LinearLayout>